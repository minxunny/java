package am;

import java.util.*;

import pm.Sale;

public class Sub02 {
	public static void run() {
		boolean run=true;
		Scanner scan=new Scanner(System.in);
		ArrayList<Juso> jusos=new ArrayList<>();
		
		while(run) {
			System.out.println("---------------------------------------");
			System.out.println("1.주소등록|2.주소조회|3.주소목록|4.주소삭제|0.종료");
			System.out.println("---------------------------------------");
			System.out.print("선택>");
			String menu=scan.nextLine();
			switch(menu) {
			case "1": //주소등록
				Juso juso=new Juso();
				System.out.println("이름>");
				String name=scan.nextLine();
				juso.setName(name);
				System.out.println("주소>");
				String address=scan.nextLine();
				juso.setAddress(address);
				System.out.println("전화>");
				String phone=scan.nextLine();
				juso.setPhone(phone);
				
				jusos.add(juso); //juso에 대한 값을 jusos에 추가!
				System.out.println(juso.toString()+"\n"+"등록완료!");
				System.out.println("등록된 데이터:"+jusos.size());
				break;
			case "2":
				break;
			case "3": //주소목록
				for(Juso s:jusos) {
				}
				System.out.println("------------------------------------");
				System.out.println(jusos.size()+"개 상품이 존재합니다.");
				break;
				break;
			case "4":
				break;
			case "0":
				System.out.println("프로그램을 종료합니다.");
				run=false;
				break;
			default:
				System.out.println("0-4번 메뉴를 선택하세요.");
			}
		}//while
	}//run
}//class
